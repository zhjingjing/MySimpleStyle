<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_pressed="true" >
        <shape>
            <gradient android:angle="90" android:startColor="#f00" android:centerColor="#0f0" android:endColor="#00f"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:startColor="#0f0"  android:endColor="#0f0"/>
            <corners android:radius="5dp"/>
            <stroke android:color="#f00" android:width="1px"></stroke>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="#3e5d6a"/>
        </shape>
    </item>
</selector>